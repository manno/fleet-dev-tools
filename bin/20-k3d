#!/bin/bash

set -euxo pipefail

docker_mirror=${docker_mirror-}
name=${1-upstream}
i=${2-0}
net=${3}

args=""
if [ -n "$docker_mirror" ]; then
  TMP_CONFIG="$(mktemp)"
  trap "rm -f $TMP_CONFIG" EXIT

  cat << EOF > "$TMP_CONFIG"
mirrors:
  "docker.io":
      endpoint:
            - $docker_mirror
EOF
  args="--registry-config $TMP_CONFIG"
fi

args="$args --network $net"

k3d cluster create "$name" --servers 1 --api-port $(( 36443 + i )) $args
